              <td style="color:red"><%= my_dict[1].join(" ")%></td>
      <% else %>
            <td style="color:orange"><%= my_dict[1].join(" ")%></td>
      <% end %>
<td><%=link_to "Match", "#", :class => "mt-2 mb-2 btn btn-primary btn-block"%></td>
    </tr>
        <% my_count += 1 %>
    <% end %>
  </tbody>
</table>


<% end %>





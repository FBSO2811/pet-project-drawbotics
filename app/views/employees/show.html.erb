<% if current_interviewer %>
  <div class="container">
    <h3 class="mt-4">You are visulalizing the employee: <%= @employee.firstname %> </h3>

    <div class="mt-3 card mb-12">
      <div class="row no-gutters">
        <div class="col-md-2" style="background-color: #42f5b3">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><h5><%= link_to @employee.firstname, employee_path(@employee)%></h5>
</h5>
            <p class="card-text">Job: <%= @employee.position %></p>
            <p class="card-text">Expertises: <%= @employee.expertises_array.join(" ") %></p>


          </div>
        </div>
        <div class="mt-2 col-md-2">
          <%= link_to "See others", employees_path, :class => "mt-2 mb-2 btn btn-primary btn-block"%>
          <%= link_to "Edit", edit_employee_path(@employee), :class => "mt-2 mb-2 btn btn-primary btn-block"%>
<%= link_to "Delete this employee", employee_path(@employee), method: :delete, :class => "mt-2 mb-2 btn btn-primary btn-light", data: { confirm: "Are you sure you want to delete this employee?" } %>

      </div>



  <% end %>

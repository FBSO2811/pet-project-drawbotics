<% if current_interviewer %>

<div class="mt-4 container text-center">
<h2>ALL EMPLOYEES</h2>
</div>
<div class="container text-right">
  <%= link_to "Add an employee", new_employee_path, class: "mt-3 btn btn-success" %>
</div>

<% my_count = 1 %>
<table class="mt-4 table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Firstname</th>
      <th scope="col">Lastname</th>
      <th scope="col">Email</th>
      <th scope="col">Job</th>
      <th scope="col">Expertises</th>
      <th scope="col">Explore</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>

    </tr>
  </thead>
  <tbody>
 <% @employees.each do |employee| %>

    <tr>
      <th scope="row"><%= my_count%></th>
      <td><%= employee.firstname%></td>
      <td><%= employee.lastname%></td>
      <td><%= employee.email%></td>
      <td><%= employee.position%></td>
      <td><%= employee.expertises_array.join(" ")%></td>
      <td><%= link_to "Explore", employee_path(employee) %></td>
      <td><%= link_to "Edit", edit_employee_path(employee) %></td>
      <td><%= link_to "Delete this position", employee_path(employee), method: :delete,data: { confirm: "Are you sure you want to delete this employee?" } %></td>

    </tr>

  </tbody>
<% my_count +=1 %>

  <% end %>

</table>


<% end %>


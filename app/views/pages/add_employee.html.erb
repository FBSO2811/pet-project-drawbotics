<div class="container">
  <div class="row">
    <div class="mt-5 offset-2 col-md-8">
      <h3>Add/Modify a opening</h3>
    </div>
    <div class="mt-3 offset-2 col-md-8">
      <%= simple_form_for [@interviewer] do |f| %>
        <%= f.input :title, required:true %>

       <%= f.input :array_skills, as: :check_boxes, label: 'Select the skills for the position (at least one)*', collection:[
        ['Python', "python"],
        ['Java', "java"],
        ['JavaScript', "javascript"],
        ['Ruby', "ruby"],
        ['C++', "c++"],
        ['Node.js', "node"],
        ['React', "react"],
        ['Django', "django"],
        ['Rails', "rails"],
        ['SQL', "sql"],
        ['Doker', "doker"],
        ['AWS', "aws"],
        ['Vue.js', "vue"],
        ['Marketing', "Marketing"],
        ['HR', "hr"],
        ['Finance', "finance"],
        ['IT', "it"],
        ], input_html: { multiple: true }, include_hidden: false %>

        <%= f.submit "Submit position", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

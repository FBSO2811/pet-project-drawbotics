<div class="mt-4 container text-center">
<h2>ALL MY CANDIDATURES</h2>
</div>
<% if current_candidate.candidatures.count > 0 %>

<% current_candidate.candidatures.each do |candidature| %>
  <div class="container">
    <div class="mt-3 card mb-12">
      <div class="row no-gutters">
        <div class="col-md-2" style="background-color: #2382e8">
        </div>
        <div class="col-md-8">
          <div class="card-body">
          <h5><%= link_to candidature.position.title, position_path(candidature.position.id)%></h5>
            <h8 class="card-title">Required skills: <%= candidature.position.skills %></h8>
            <p class="card-text">Number of applicants: <%= candidature.position.candidatures.count %>  </p>

          </div>
        </div>
        <div class="mt-2 col-md-2">
          <%= link_to "See position", position_path(candidature.position.id), :class => "mt-2 mb-2 btn btn-primary btn-block"%>
          <%= link_to "Delete", position_candidature_path(candidature.position, candidature), method: :delete, :class => "mt-2 mb-2 btn btn-light btn-block",data: { confirm: "Are you sure you want to delete this candidature?" } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% else %>
  <div class="mt-4 container">
    <p class="text-center" style="color:red">You have not applied yet to any job openings</p>
    <%= link_to "See open positions", positions_path, :class => "mt-2 mb-2 btn btn-primary btn-block"%>
</div>


<% end %>

<div class="container">
</div>
